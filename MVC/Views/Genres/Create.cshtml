@model MVC.Genre

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 text-gradient text-center mb-4">Create</h1>
<h4 class="text-center mb-4">Genre</h4>
<hr />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label text-muted">Genre Name</label>
                            <input asp-for="Name" class="form-control rounded-3" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded-3">
                                <i class="fas fa-save me-2"></i>Create Genre
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn btn-link text-primary text-decoration-none hover-shadow rounded-3">
                Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
